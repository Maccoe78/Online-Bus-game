@page
@model OnlineBussen.Pages.Lobby.LobbyModel
@{
    Layout = "_Layout";
}

<div class="flex-1 p-8 min-h-screen bg-[#5A1E1E] flex flex-col ml-64 font-irish">
    <h1 class="text-4xl text-bus-gold mb-8 text-center">Current Lobbys</h1>

    <div class="flex flex-col space-y-4 items-center">
        @if (Model.Lobbies != null && Model.Lobbies.Any())
        {
            @foreach (var lobby in Model.Lobbies)
            {
                <div class="w-full max-w-2xl bg-[#4A1818] rounded-lg p-4 flex justify-between items-center">
                    <div class="flex flex-col">
                        <span class="text-xl text-bus-gold">Lobby @lobby.LobbyName</span>
                        <div class="flex space-x-4 text-bus-gold/80">
                            <span>Players: @(lobby.AmountOfPlayers)/4</span>
                            <span>@lobby.Status</span>
                        </div>
                    </div>
                    <button class="p-2" onclick="window.location.href='/Lobby/LobbyDetail?lobbyId=@lobby.LobbyId'">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-bus-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4" />
                        </svg>
                    </button>
                </div>
            }
        }
        else
        {
            <span class="text-xl text-bus-gold mb-4">No Current Lobbys</span>
        }
    </div>

    <button class="fixed bottom-8 right-8 px-6 py-2 bg-bus-gold text-bus-dark rounded-full hover:bg-opacity-90 transition-all"
            onclick="window.location.href='/Lobby/CreateLobby';">
        Create New Lobby
    </button>
</div>