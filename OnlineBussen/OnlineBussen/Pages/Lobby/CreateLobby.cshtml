@page
@model OnlineBussen.Pages.Lobby.CreateLobbyModel
@{
    Layout = "_Layout";
}

<div class="flex-1 p-8 min-h-screen bg-[#5A1E1E] flex flex-col justify-center items-center ml-64 font-irish">
    <h1 class="text-4xl text-bus-gold mb-8">Create Lobby</h1>
      <form method="post" class="space-y-6">
        <div class="flex flex-col items-center">
            <div class="space-y-2">
                <label class="block text-lg font-medium text-[#FFD700] font-irish">Lobby Name</label>
                <input type="text"
                       name="Lobbyname"
                       class="w-full px-4 py-2 bg-gray-100/90 rounded-md focus:outline-none focus:ring-2 focus:ring-[#FFD700]"
                       required>
            </div>

            <div class="space-y-2">
                <label class="block text-lg font-medium text-[#FFD700] font-irish">Lobby Password</label>
                <input type="password"
                       name="LobbyPassword"
                       class="w-full px-4 py-2 bg-gray-100/90 rounded-md focus:outline-none focus:ring-2 focus:ring-[#FFD700]"
                       required>
            </div>
        </div>
      </form>

    <button class="mt-8 px-6 py-2 bg-bus-gold text-bus-dark rounded-full hover:bg-opacity-90 transition-all">
        Create New Lobby
    </button>

</div>

