@page
@model OnlineBussen.Pages.Lobby.CreateLobbyModel
@{
    Layout = "_Layout";
}

<div class="min-h-screen bg-[#591B1B] flex items-center justify-center p-4 ml-64 font-irish">
    <div class="w-full max-w-md space-y-8">
        <h1 class="text-4xl font-bold text-center text-[#FFD700]">Create Lobby</h1>

        <form method="post" class="space-y-6">
            <div class="relative">
                <label class="block text-lg font-medium text-[#FFD700]">Lobby Name</label>
                <input type="text"
                       name="Lobby.LobbyName"
                       class="w-full h-10 px-4 bg-gray-100/90 rounded-md focus:outline-none focus:ring-2 focus:ring-[#FFD700]"
                       required>
                <span asp-validation-for="Lobby.LobbyName" class="absolute -bottom-5 left-0 text-red-500 text-sm"></span>
            </div>

            <div class="relative mt-8">
                <label class="block text-lg font-medium text-[#FFD700]">Lobby Password</label>
                <input type="password"
                       name="Lobby.LobbyPassword"
                       class="w-full h-10 px-4 bg-gray-100/90 rounded-md focus:outline-none focus:ring-2 focus:ring-[#FFD700]"
                       required>
            </div>

            <div class="flex justify-center mt-8">
                <button type="submit"
                        class="px-6 py-2 bg-[#FFD700] text-bus-dark rounded-full hover:bg-opacity-90 transition-all">
                    Create New Lobby
                </button>
            </div>
        </form>
    </div>
</div>

