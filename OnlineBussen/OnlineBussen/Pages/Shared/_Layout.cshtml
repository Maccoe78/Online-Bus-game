<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bussen</title>
    <script src="https://cdn.tailwindcss.com"></script>
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'bus-dark': '#4A1818',
                        'bus-gold': '#FFD700',
                    },
                    fontFamily: {
                        'irish': ['"Irish Grover"', 'cursive'],
                    }
                }
            }
        }
    </script>
    
</head>
<body>

    
        <!-- Sidebar -->
        <div class="w-64 bg-[#4B0F0F] flex flex-col h-screen fixed">
            <!-- Profile Section - Top -->
            <div class="flex flex-col items-center space-y-2 pt-4">
                <img src="~/css/Sjors.jpg" alt="" class="w-24 h-24 rounded-full">
                <span class="text-[#FFD700] font-irish">@ViewData["Username"]</span>
            </div>

            <!-- Navigation Links - Middle -->
            <nav class="flex-1 flex flex-col justify-center px-4">
                <div class="space-y-6">
                    <div class="h-[2px] bg-[#FFD700]/70"></div>
                    <a href="/Account/Account" class="block text-center text-[#FFD700] font-irish hover:opacity-80">Account</a>
                    <div class="h-[2px] bg-[#FFD700]/70"></div>
                    <a href="/Lobby/Lobby" class="block text-center text-[#FFD700] font-irish hover:opacity-80">Lobbys</a>
                    <div class="h-[2px] bg-[#FFD700]/70"></div>
                    <a href="/Settings/Settings" class="block text-center text-[#FFD700] font-irish hover:opacity-80">Settings</a>
                    <div class="h-[2px] bg-[#FFD700]/70"></div>
                </div>
            </nav>

            <!-- Logout Button - Bottom -->
            <div class="p-4">
                <button class="w-full py-2 bg-[#FFD700] text-[#591B1B] rounded-full font-irish hover:bg-opacity-90 transition-all"
                    onclick="window.location.href='/?handler=Logout';">
                    Logout
                </button>
            </div>
        </div>

       <div class="content">
           @RenderBody()
       </div>
      
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>