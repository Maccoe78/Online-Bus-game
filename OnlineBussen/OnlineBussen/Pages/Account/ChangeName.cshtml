@page
@model OnlineBussen.Pages.Account.ChangeNameModel
@{
    Layout = "_Layout";
}
<div class="min-h-screen bg-[#591B1B] flex items-center justify-center p-4 ml-64">
    <div class="w-full max-w-md space-y-8">
        <h1 class="text-4xl font-bold text-center text-[#FFD700] font-irish">Change Credentials</h1>

        <form method="post" class="space-y-6">
            <div class="space-y-2">
                <label class="block text-lg font-medium text-[#FFD700] font-irish">Username</label>
                <input type="text"
                       name="username"
                       value="@Model.CurrentUser?.Username"
                       class="w-full px-4 py-2 bg-gray-100/90 rounded-md focus:outline-none focus:ring-2 focus:ring-[#FFD700]"
                       required>
            </div>

            <div class="space-y-2">
                <label class="block text-lg font-medium text-[#FFD700] font-irish">Password</label>
                <input type="text"
                       name="password"
                       value="@Model.CurrentUser?.Password"
                       class="w-full px-4 py-2 bg-gray-100/90 rounded-md focus:outline-none focus:ring-2 focus:ring-[#FFD700]"
                       required>
            </div>

            <div class="flex justify-center gap-4 pt-4">
                <a href="/Account/Account"
                   class="px-6 py-2 bg-[#FFD700] text-[#591B1B] rounded-full hover:bg-opacity-90 transition-all duration-300 font-large font-irish">
                    Back
                </a>
                <button type="submit"
                        class="px-6 py-2 bg-[#FFD700] text-[#591B1B] rounded-full hover:bg-opacity-90 transition-all duration-300 font-large font-irish">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>
